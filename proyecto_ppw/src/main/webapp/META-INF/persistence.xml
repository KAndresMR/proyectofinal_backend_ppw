<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="3.0">
    <persistence-unit name="miUnidadDePersistencia">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:/jdbc/PostgresDS</jta-data-source>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/andresmorocho"/>
            <property name="jakarta.persistence.jdbc.user" value="andres"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>
        </properties>
    </persistence-unit>
</persistence>